<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edge.stocks.product.rk.dao.Pro_StockDao">
	<!-- 定义缓存 一般是一级缓存，如果用同一个sqlsession 那么相同查询直接会从缓存中查找 <cache size="1024" flushInterval="60000" 
		eviction="LRU" readOnly="false"></cache> -->

	<!--分页显示客户 -->
	<select id="pro_StockList" parameterType="ERP_ProStock_QueryVo" resultType="ERP_Product_Stock">
		select * from (select row_.*, rownum rownum_ from (select * from
		erp_product_Stock order by stock_Id desc ) row_
		<where>
			rownum &lt;= #{rows}
		</where>
		)
		<where>
			rownum_ &gt;= #{page}
		</where>
	</select>

	<!--查询客户总数量 -->
	<select id="pro_StockCount" resultType="Integer" parameterType="ERP_ProStock_QueryVo">
		select count(1) from erp_product_Stock 
	</select>
	
	<!--加载所有未入库的成品  -->
	<select id="allWrkProduct" resultType="ERP_Products">
		select * from erp_products p
		<where>
			p.is_rk=0
		</where>
	</select>
	
	<!--新增库存  -->
	<insert id="saveProStock" parameterType="ERP_Product_Stock">
		insert into erp_product_Stock(STOCK_ID,PRODUCT,STOCK,RKNUMBER,CKNUMBER,REMARKS)
		values(seq_stock_Id.nextval,#{product,jdbcType=NUMERIC},#{stock,jdbcType=VARCHAR},
		#{rknumber,jdbcType=NUMERIC},#{cknumber,jdbcType=NUMERIC},#{remarks,jdbcType=VARCHAR})
	</insert>
	
	
	<!--查询刚入库的库存主键  -->
	<select id="queryMaxStock_Id" resultType="Integer">
		select max(stock_Id) from erp_product_Stock
	</select>
	
	<!--剩余成品入库  -->
	<update id="syrkProduct" parameterType="ERP_Product_Stock">
		update erp_product_Stock
		<set>
			<if test="product!=null">product=#{product},</if>
			<if test="stock!=null">stock=#{stock},</if>
			<if test="rknumber!=null">rknumber=#{rknumber},</if>
			<if test="cknumber!=null">cknumber=#{cknumber},</if>
			<if test="remarks!=null">remarks=#{remarks}</if>
		</set>
		<where>
			stock_Id=#{stock_Id}
		</where>
	</update>
	
	<!-- 根据Id获得成品入库对象 -->
	<select id="queryPro_StockById" parameterType="Integer" resultType="ERP_Product_Stock">
		select * from erp_product_Stock
		<where>
			stock_Id=#{stock_Id}
		</where>
	</select>
</mapper>